rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /jobs/{jobId} {
      // Allow read and delete if user owns the document
      allow read, delete: if request.auth != null && request.auth.uid == resource.data.uid;
      // Allow create if user is authenticated and setting their own uid
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      // Allow update if user owns the document and maintains their uid
      allow update: if request.auth != null && 
                    request.auth.uid == resource.data.uid && 
                    request.auth.uid == request.resource.data.uid;
    }
  }
}
