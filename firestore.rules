rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /jobs/{jobId} {
      // Allow read and delete if user owns the document
      allow read, delete: if request.auth != null && request.auth.uid == resource.data.uid;
      // Allow create if user is authenticated and setting their own uid
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      // Allow update if user owns the document and maintains their uid
      allow update: if request.auth != null && 
                    request.auth.uid == resource.data.uid && 
                    request.auth.uid == request.resource.data.uid;
    }
    
    match /feedback/{feedbackId} {
      // Allow anyone to create feedback (for bug reports and suggestions)
      allow create: if request.auth != null;
      // Allow only admin users to read feedback
      allow read: if request.auth != null && 
                  request.auth.token.email in ['sliceofbanana02@gmail.com', 'genesisjr.esdrilon@gmail.com'];
      // Allow admin users to update feedback status
      allow update: if request.auth != null && 
                    request.auth.token.email in ['sliceofbanana02@gmail.com', 'genesisjr.esdrilon@gmail.com'] &&
                    request.resource.data.keys().hasAll(['status']) &&
                    request.resource.data.keys().hasOnly(['status', 'type', 'title', 'description', 'email', 'timestamp', 'userAgent', 'url']);
    }
  }
}
